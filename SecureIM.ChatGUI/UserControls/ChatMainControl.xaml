<UserControl x:Class="SecureIM.ChatGUI.UserControls.ChatMainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tabClasses="clr-namespace:SecureIM.ChatGUI.ViewModel.TabClasses"
             xmlns:viewModel1="clr-namespace:SecureIM.ChatGUI.ViewModel"
             d:DataContext="{d:DesignInstance tabClasses:TabChatMain}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <TextBox Name="TextBoxChatPane"
                 Grid.Row="0"
                 Width="Auto"
                 Height="75"
                 Margin="6,0,6,6"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Bottom" Grid.ColumnSpan="2" />
        <TextBox Name="TextBoxEntryField"
                 Grid.Row="1"
                 Width="Auto"
                 Height="23"
                 Margin="6,6,6,6"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 KeyDown="TextBoxEntryField_OnKeyDown" Grid.ColumnSpan="2" Grid.Column="0" />
        <Button x:Name="BtnGenKeyPair" Content="Generate Key Pair" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top" Width="107"
                Grid.Row="0" Grid.ColumnSpan="2" Click="BtnGenKeyPair_Click"/>
        <Button x:Name="BtnGetPubKey" Content="Get Public Key" HorizontalAlignment="Left" Margin="50,25,0,0" VerticalAlignment="Top" Width="107"
                Grid.Row="0" Grid.Column="1" Click="BtnGetPubKey_Click"/>
        <Button x:Name="BtnSetName" Content="Set Name" HorizontalAlignment="Left" Margin="25,75,0,0" VerticalAlignment="Top" Width="107"
                Grid.Row="0" Grid.ColumnSpan="2" Click="BtnSetName_Click"/>
        <TextBox x:Name="TxtSetName" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="50,75,0,0" TextWrapping="Wrap" Text="New Name..." VerticalAlignment="Top" Width="107" FontStyle="Italic" TextDecorations="{x:Null}" FontSize="10"/>
        <Button x:Name="BtnAddFriend" Content="Add Friend" HorizontalAlignment="Left" Margin="25,125,0,0" VerticalAlignment="Top" Width="107"
                Grid.Row="0" Grid.ColumnSpan="2" Click="BtnAddFriend_Click"/>
        <TextBox x:Name="TxtAlias" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="50,125,0,0" TextWrapping="Wrap" Text="Friend's Alias..." VerticalAlignment="Top" Width="107" FontStyle="Italic" TextDecorations="{x:Null}" FontSize="10"/>
        <TextBox x:Name="TxtFriendPublicKey" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="50,150,0,0" TextWrapping="Wrap" Text="Friend's Public Key..." VerticalAlignment="Top" Width="107" FontStyle="Italic" TextDecorations="{x:Null}" FontSize="10"/>
    </Grid>
</UserControl>