<UserControl x:Class="SecureIM.ChatGUI.UserControls.ChatWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tabClasses="clr-namespace:SecureIM.ChatGUI.ViewModel.TabClasses"
             xmlns:viewModel1="clr-namespace:SecureIM.ChatGUI.ViewModel"
             d:DataContext="{d:DesignInstance tabClasses:TabChatWindow}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <TextBox Name="TextBoxChatPane"
                 Grid.Row="0"
                 Width="Auto"
                 Height="Auto"
                 Margin="6,6,6,6"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch" />
        <TextBox Name="TextBoxEntryField"
                 Grid.Row="1"
                 Width="Auto"
                 Height="23"
                 Margin="6,6,6,6"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 KeyDown="TextBoxEntryField_OnKeyDown" />
    </Grid>
</UserControl>