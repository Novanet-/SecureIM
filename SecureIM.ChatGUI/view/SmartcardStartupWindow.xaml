<Window x:Class="SecureIM.ChatGUI.view.SmartcardStartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureIM.ChatGUI.view"
        mc:Ignorable="d"
        d:DesignHeight="150" d:DesignWidth="300"
        SizeToContent="WidthAndHeight"
        Title="SmartcardStartupWindow" Height="150" Width="300" ResizeMode="CanMinimize">
    <Grid x:Name="grdMain">

        <Grid x:Name="grdLabel" Margin="0,0,0,80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="lblChooseReader" Content="Choose Smartcard Reader" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Background="Gainsboro" FontWeight="Bold" Height="41" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="294"  Grid.Column="0" Grid.Row="0" />
        </Grid>
        <Grid x:Name="grdList" Margin="0,41,0,0">

            <ListBox x:Name="lstChooseReader" SelectionChanged="lstChooseReader_SelectionChanged" Grid.Column="0" Grid.Row="0"/>
        </Grid>

    </Grid>
</Window>